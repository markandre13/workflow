// this typescript configuration is shared by all builds and visual studio code
{
    "compilerOptions": {
        "target": "es2020",
        "module": "es6",
        "moduleResolution": "node",
        "traceResolution": false,
        "esModuleInterop": true,
        "incremental": false,
        "lib": ["ESNext", "DOM"],
        "outDir": "build",
        "baseUrl": "src",
        "paths": {
            "shared/*": ["shared/*"],
            "client/*": ["client/*"]
        },
        "plugins": [
            { "transform": "@zerollup/ts-transform-paths" },
            {
                "transform": "@zoltu/typescript-transformer-append-js-extension",
                "after": true,
            }
        ],
        "jsx": "react-jsx",
        "jsxImportSource": "toad.jsx/lib",
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "strict": true,
        "strictNullChecks": true,
        "allowJs": false,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "sourceMap": true,
    },
    "include": [
        "src/client/workflow.ts",
        // "src/client/views/**/*.ts",
        // "src/client/views/**/*.tsx",
        // "src/shared/*.ts",
        "test/unit/figures/path.spec.ts",
        "test/unit/figuretools/pentool.spec.ts",
        "test/unit/figuretools/selecttool.spec.ts",
        "test/unit/geometry/nearestPointOnCurve.spec.ts",
        "test/unit/geometry/pointInPolygon.spec.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
