{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "traceResolution": false,
        "lib": ["es6", "es2017.object", "dom"],
        "strict": true,
        "allowJs": false,
        "noImplicitAny": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "baseUrl": ".",
        "paths": {
            "shared/*": [ "src/shared/*" ]
        }
    },
    "include": [
        "test/**/*.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "test/**/*.spec.ts",
        "test/bootstrap.ts",
        "node_modules"
    ]
}
