{
  "name": "workflow",
  "version": "0.0.1",
  "description": "a collaborative real-time white- and kanban board",
  "author": "Mark-Andr√© Hopf <mhopf@mark13.org>",
  "license": "GPL-3.0",
  "main": "index.html",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markandre13/workflow.git"
  },
  "scripts": {
    "build": "npm run build:idl && npm run build:server && npm run build:client",
    "build:idl": "corba-idl -d --ts-all src/shared/workflow.idl",
    "build:client": "rollup --config rollup-client.config.js",
    "build:server": "rollup --config rollup-server.config.js",
    "test": "npm run build:idl && karma start config/karma.conf.js",
    "test:watch": "npm run build:idl && karma start --singleRun=false --autoWatch=true config/karma.conf.js | grep -v '^Chrome Headless .* LOG:'",
    "test:watch:verbose": "npm run build:idl && karma start --singleRun=false --autoWatch=true config/karma.conf.js",
    "test-visual": "karma start config/karma-visual.conf.ts",
    "test-ui": "npm run build:idl && rollup --config config/rollup-test-ui.config.js && mocha --require ts-node/register 'test/ui/**/*.spec.ts'",
    "update": "npx npm-check-updates -u && npm install"
  },
  "dependencies": {
    "assert": "^2.0.0",
    "bcrypt": "^5.0.1",
    "knex": "^0.95.6",
    "sqlite3": "^5.0.2",
    "tslint": "^5.20.1",
    "ws": "^7.5.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-multi-entry": "^4.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@types/assert": "^1.5.4",
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.2.19",
    "@types/chai-almost": "^1.0.1",
    "@types/http-server": "^0.12.0",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.4",
    "@types/puppeteer": "^5.4.3",
    "@types/sqlite3": "^3.1.7",
    "@types/ws": "^7.4.5",
    "chai": "^4.3.4",
    "chai-almost": "^1.0.1",
    "corba.js": "0.0.11",
    "http-server": "^0.12.3",
    "karma": "^6.3.4",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-html-annotations-reporter": "0.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-source-map-support": "^1.4.0",
    "karma-sourcemap-loader": "^0.3.8",
    "karma-typescript": "^5.5.1",
    "mocha": "^9.0.1",
    "puppeteer": "^10.0.0",
    "requirejs": "^2.3.6",
    "rollup": "^2.52.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "sourcemapped-stacktrace": "^1.1.11",
    "toad.js": "0.0.15",
    "ts-loader": "^9.2.3",
    "ts-mocha": "^8.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4"
  }
}
