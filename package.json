    "@zoltu/typescript-transformer-append-js-extension": "^1.0.1",
    "bind-decorator": "^1.0.11",
    "chai": "^4.3.6",
    "chai-almost": "^1.0.1",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
