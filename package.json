  "main": "index.html",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markandre13/workflow.git"
  },
  "scripts": {
    "build": "npm run compile-idl && npm run compile-server && npm run compile-client",
    "compile-idl": "corba-idl -d --ts-all src/shared/workflow.idl",
    "compile-client": "rollup --config rollup-client.config.js",
    "compile-server": "tsc -p tsconfig-server.json",
    "test": "npm run compile-idl && karma start config/karma.conf.js",
    "test-visual": "karma start config/karma-visual.conf.ts",
    "test-ui": "npm run compile-idl && rollup --config config/rollup-test-ui.config.js && mocha --require ts-node/register 'test/ui/**/*.spec.ts'"
  },
  "dependencies": {
    "assert": "^2.0.0",
    "bcrypt": "^5.0.0",
    "knex": "^0.20.15",
    "sqlite3": "^4.2.0",
    "tslint": "^5.20.1",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "@atom/teletype-crdt": "^0.9.0",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-multi-entry": "^4.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@types/assert": "^1.5.2",
    "@types/bcrypt": "^3.0.0",
    "@types/chai": "^4.2.13",
    "@types/chai-almost": "^1.0.1",
    "@types/http-server": "^0.10.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.67",
    "@types/puppeteer": "^1.20.7",
    "@types/sqlite3": "^3.1.6",
    "@types/ws": "^6.0.4",
    "chai": "^4.2.0",
    "chai-almost": "^1.0.1",
    "corba.js": "0.0.10",
    "http-server": "^0.12.3",
    "karma": "^5.2.3",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-html-annotations-reporter": "0.0.1",
    "karma-mocha-reporter": "^2.2.5",
