    "@rollup/plugin-node-resolve": "^13.1.3",
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.3.0",
    "@types/chai-almost": "^1.0.1",
    "@types/chai-as-promised": "^7.1.4",
    "@types/chai-subset": "^1.3.3",
    "@types/mocha": "^9.1.0",
