// this typescript configuration is shared by all builds and visual studio code
{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "traceResolution": false,
        "lib": ["esnext", "dom"],
        "baseUrl": "src",
        "paths": {
            "shared/*": ["shared/*"],
            "client/*": ["client/*"]
        },
        "jsx": "react-jsx",
        "jsxImportSource": "client",
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "strict": true,
        "strictNullChecks": true,
        "allowJs": false,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "sourceMap": true,
    },
    "include": [
        "src/**/*.ts",
        "src/client/views/**/*.tsx",
        "test/**/*.ts",
        "test/**/*.tsx",
    ],
    "exclude": [
        "node_modules"
    ]
}
