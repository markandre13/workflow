{
    "compilerOptions": {
        "outDir": ".",
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "traceResolution": false,
        "lib": ["es6", "es2017.object", "dom"],
        "baseUrl": "./src/",
        "strict": true,
        "allowJs": false,
        "noImplicitAny": true,
        "sourceMap": true,
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "test/**/*.spec.ts",
        "test/bootstrap.ts",
        "node_modules"
    ]
}
